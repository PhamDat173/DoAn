<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.admin.doan.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:weightSum="5"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <SearchView
                    android:layout_width="250dp"
                    android:layout_height="50dp">
                </SearchView>
                <Button
                    android:text="Tìm kiếm"
                    android:layout_width="100dp"
                    android:layout_height="50dp" />
            </LinearLayout>
            <LinearLayout
                android:weightSum="2"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:paddingTop="60dp"
                    android:textAlignment="center"
                    android:layout_margin="2dp"
                    android:layout_width="200dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:background="@drawable/singer"
                    android:text="Lệ Quyên"
                    android:textColor="@color/red"
                    android:textSize="20dp" />

                <TextView
                    android:paddingTop="60dp"
                    android:layout_width="200dp"
                    android:layout_height="100dp"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="@drawable/singer"
                    android:text="Tuấn Hưng"
                    android:textAlignment="center"
                    android:textColor="@color/red"
                    android:textSize="20dp" />
            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="2">

                <TextView
                    android:layout_width="200dp"
                    android:layout_height="100dp"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="@drawable/singer"
                    android:paddingTop="60dp"
                    android:text="Bảo Anh"
                    android:textAlignment="center"
                    android:textColor="@color/red"
                    android:textSize="20dp" />

                <TextView
                    android:paddingTop="60dp"
                    android:layout_width="200dp"
                    android:layout_height="100dp"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="@drawable/singer"
                    android:text="Lê Bảo Bình"
                    android:textAlignment="center"
                    android:textColor="@color/red"
                    android:textSize="20dp" />
            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="2">

                <TextView
                    android:paddingTop="60dp"
                    android:layout_width="200dp"
                    android:layout_height="100dp"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="@drawable/singer"
                    android:text="Tuấn Hưng"
                    android:textAlignment="center"
                    android:textColor="@color/red"
                    android:textSize="20dp" />

                <TextView
                    android:paddingTop="60dp"
                    android:layout_width="200dp"
                    android:layout_height="100dp"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="@drawable/singer"
                    android:text="Trịnh Thăng Bình"
                    android:textAlignment="center"
                    android:textColor="@color/red"
                    android:textSize="20dp" />
            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="2">

                <TextView
                    android:layout_width="200dp"
                    android:layout_height="100dp"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="@drawable/singer"
                    android:paddingTop="60dp"
                    android:text="Karik"
                    android:textAlignment="center"
                    android:textColor="@color/red"
                    android:textSize="20dp" />

                <TextView
                    android:paddingTop="60dp"
                    android:layout_width="200dp"
                    android:layout_height="100dp"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="@drawable/singer"
                    android:text="Hương Tràm"
                    android:textAlignment="center"
                    android:textColor="@color/red"
                    android:textSize="20dp" />
            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="2">

                <TextView
                    android:paddingTop="60dp"
                    android:textAlignment="center"
                    android:layout_margin="2dp"
                    android:layout_width="200dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:background="@drawable/singer"
                    android:text="Westlife"
                    android:textColor="@color/red"
                    android:textSize="20dp" />

                <TextView
                    android:paddingTop="60dp"
                    android:layout_width="200dp"
                    android:layout_height="100dp"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="@drawable/singer"
                    android:text="Quang Lê"
                    android:textAlignment="center"
                    android:textColor="@color/red"
                    android:textSize="20dp" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>
