<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.admin.doan.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <SearchView
                    android:layout_width="250dp"
                    android:layout_height="50dp">
                </SearchView>
                <Button
                    android:text="Tìm kiếm"
                    android:layout_width="100dp"
                    android:layout_height="50dp" />
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_margin="2dp"
                    android:background="@drawable/mot"
                    android:text="Bài hát"
                    android:textAlignment="center"
                    android:textColor="#ff0000"
                    android:textSize="50dp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="2">

                <TextView
                    android:textAlignment="center"
                    android:layout_margin="2dp"
                    android:layout_width="200dp"
                    android:layout_height="150dp"
                    android:layout_weight="1"
                    android:background="@drawable/hai"
                    android:text="Ca sĩ"
                    android:textColor="#ff0000"
                    android:textSize="30dp" />

                <TextView
                    android:layout_width="200dp"
                    android:layout_height="150dp"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="@drawable/ba"
                    android:text="Album"
                    android:textAlignment="center"
                    android:textColor="#ff0000"
                    android:textSize="30dp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="2">

                <TextView
                    android:textAlignment="center"
                    android:layout_margin="2dp"
                    android:layout_width="200dp"
                    android:layout_height="150dp"
                    android:layout_weight="1"
                    android:background="@drawable/bon"
                    android:text="Chủ đề"
                    android:textColor="#ff0000"
                    android:textSize="30dp" />

                <TextView
                    android:layout_width="200dp"
                    android:layout_height="150dp"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="@drawable/nam"
                    android:text="Settings"
                    android:textAlignment="center"
                    android:textColor="#ff0000"
                    android:textSize="30dp" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>
